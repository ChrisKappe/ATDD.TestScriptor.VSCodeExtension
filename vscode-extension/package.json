{
    "name": "atdd-testscriptor",
    "displayName": "ATDD TestScriptor",
    "publisher": "fluxxus-nl",
    "license": "MIT",
    "author": {
        "name": "fluxxus-nl"
    },
    "description": "Acceptance Test-Driven Development with Business Central",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.40.0"
    },
    "keywords": [
        "Microsoft Dynamics 365 Business Central",
        "Business Central",
        "AL",
        "AL Language",
        "TDD",
        "ATDD",
        "Test-Driven Development"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:atddTestScriptor.open"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "atddTestScriptor.open",
                "title": "ATDD Test Scriptor"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "yarn run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^3.1.4",
        "vscode": "^1.1.25"
    },
    "dependencies": {
        "fs-extra": "^8.1.0"
    }
}
