{
    "name": "atdd-testscriptor",
    "displayName": "ATDD.TestScriptor",
    "publisher": "fluxxus-nl",
    "license": "MIT",
    "author": {
        "name": "fluxxus-nl"
    },
    "repository": {
        "type": "github",
        "url": "https://github.com/fluxxus-nl/ATDD.TestScriptor.VSCodeExtension.git"
    },
    "description": "Acceptance Test-Driven Development with Business Central",
    "version": "0.0.4",
    "engines": {
        "vscode": "^1.42.0"
    },
    "keywords": [
        "Microsoft Dynamics 365 Business Central",
        "Business Central",
        "AL",
        "AL Language",
        "TDD",
        "ATDD",
        "Test-Driven Development"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:atddTestScriptor.open"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "atddTestScriptor.open",
                "title": "ATDD.TestScriptor"
            }
        ]
    },
    "atddDebug": true,
    "extensionKind": [
        "workspace"
    ],
    "scripts": {
        "vscode:prepublish": "yarn run compile && yarn run dist",
        "package": "vsce package",
        "dist": "yarn webpack --mode production",
        "dev": "yarn webpack --mode none",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "watch": "yarn run dev && tsc -watch -p ./",
        "pretest": "yarn run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "@types/request": "^2.48.4",
        "@types/vscode": "^1.42.0",
        "fs-plus": "^3.1.1",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "source-map-support": "^0.5.12",
        "ts-loader": "^6.2.1",
        "tslint": "^5.8.0",
        "typescript": "3.7.5",
        "vscode-test": "^1.3.0",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "@microsoft/signalr": "^3.1.0",
        "clipboardy": "^2.2.0",
        "fs-extra": "^8.1.0",
        "portfinder": "^1.0.25"
    }
}
